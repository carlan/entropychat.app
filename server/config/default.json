{
  "host": "localhost",
  "port": "PORT",
  "public": "../public/",
  "paginate": {
    "default": 10,
    "max": 50
  },
  "authentication": {
    "entity": "user",
    "service": "users",
    "secret": "JWT_SECRET",
    "authStrategies": [
      "jwt"
    ],
    "jwtOptions": {
      "header": {
        "typ": "access"
      },
      "audience": "https://entropychat.app",
      "issuer": "entropychat",
      "algorithm": "HS256",
      "expiresIn": "1d"
    },
    "oauth": {
      "redirect": "/",
      "github": {
        "key": "GITHUB_CLIENT_ID",
        "secret": "GITHUB_CLIENT_SECRET"
      }
    }
  },
  "mongodb": {
    "host": "MONGO_HOST",
    "port": "MONGO_PORT",
    "db_name": "MONGO_DB_NAME",
    "root_user": "MONGO_ROOT_USER",
    "root_password": "MONGO_ROOT_PASSWORD",
    "reconnect_interval": "MONGO_RECONNECT_INTERVAL",
    "reconnect_tries": "MONGO_RECONNECT_TRIES"
  }
}
